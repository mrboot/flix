<%= form_for [@movie, @review] do |f| %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true %>
      </li>
      <li class="required">
        <%= f.label :location %>
        <%= f.text_field :location %>
      </li>
      <li class="required">
        <%= f.label :comment %>
        <%= f.text_area :comment, cols: 40, rows: 7, placeholder: "What did you think?" %>
      </li>
      <li class="required stars">
        <%= f.label :stars %>
        <% Review::STARS.each do |star| %>
          <span class="star">
            <%= star %> <%= f.radio_button :stars, star %>
          </span>
        <% end %>
      </li>
    </ol>
    <p>
      <%= f.submit %>
      <% if local_assigns[:full] %>
        <%= link_to "Cancel", movie_reviews_path(@movie), class: 'button' %>
      <% end %>
    </p>
  </fieldset>
<% end %>
