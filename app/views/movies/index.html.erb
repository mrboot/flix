<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Movies!</title>
  </head>
  <body>
    <h1>Movies</h1>

    <% @movies.each do |movie| %>
      <article>
        <header>
          <h2><%= movie.title %></h2>
        </header>
        <p>
          <%= movie.description %>
        </p>
        <table>
          <tr>
            <th>Released:</th>
            <td><%= movie.released_on.to_s(:long_ordinal) %></td>
          </tr>
          <tr>
            <th>Rating:</th>
            <td><%= movie.rating %></td>
          </tr>
          <tr>
            <th>Total Gross:</th>
            <td><%= number_to_currency(movie.total_gross, unit:"Â£") %></td>
          </tr>
        </table>
      </article>
    <% end %>

  </body>
</html>
