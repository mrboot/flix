<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Movies!</title>
  </head>
  <body>
    <h1>Listing <%= @movies.size %> Movies</h1>

    <ul>
      <% @movies.each do |movie| %>
        <li><strong><%= movie.title %></strong>
            (<%= movie.rating %>):
            <%= number_to_currency(movie.total_gross) %>
        </li>
      <% end %>
    </ul>

  </body>
</html>
