<%= form_for [@movie, @review] do |f| %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true %>
      </li>
      <li class="required">
        <%= f.label :location %>
        <%= f.text_field :location %>
      </li>
      <li class="required">
        <%= f.label :comment %>
        <%= f.text_area :comment, cols: 40, rows: 7, placeholder: "What did you think?" %>
      </li>
    </ol>
    <p id="review-stars">Rating:</p>
    <div class="rating">
      <% Review::STARS.each do |star| %>
          <%= f.radio_button :stars, star, :checked => (star == 1) %>
          <%= f.label :stars, content_tag(:i, "", class: "fa fa-star"), :value => star %>
      <% end %>
    </div>
    <p id="review-submit">
      <%= f.submit %>
      <% if local_assigns[:full] %>
        <%= link_to "Cancel", movie_reviews_path(@movie), class: 'button' %>
      <% end %>
    </p>
  </fieldset>
<% end %>
